
@{
    ViewData["Title"] = "DisplayTrackTimeDateRange";
}
@model System.Collections.Generic.List<WorkHourTracker.Model.Entities.GetTrackTimeDateRangeDatabaseOutput>;

<h2>@TempData.Peek("firstName").ToString()'s TrackTime Records</h2>

<div>
    @if (TempData.Peek("CreateTrackTimeError") != null)
    {
            <p style="color:red">@TempData["CreateTrackTimeError"].ToString()</p>
    }
</div>

<div>
    <div>
        <a asp-controller="TrackTime" asp-action="CreateNewTrackTimeRecord">Create New TrackTime Record</a>
    </div>
    <br />
    @foreach (var dateRange in Model)
    {
        <div>
            <a asp-controller="TrackTime" asp-action="DisplayTrackTimeDetails" asp-route-startDate="@dateRange.StartDate" asp-route-endDate="@dateRange.EndDate">@dateRange.StartDate - @dateRange.EndDate</a>
        </div>
    }
</div>
